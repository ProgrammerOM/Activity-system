<div class="min-h-full">
  <div class="container mx-auto p-4">
    <div class="mb-4 flex justify-between items-center">
      <input
        type="text"
        id="searchInput"
        class="border p-2 rounded-lg shadow-sm w-1/4"
        placeholder="Search..."
      />
      <span id="paginationInfo" class="text-gray-700 text-sm"></span>
    </div>
    <table
      id="customTable"
      class="table-auto w-full bg-white shadow-md rounded-lg"
    >
      <thead class="bg-gray-200">
        <tr>
          <th class="px-4 py-2 font-normal">Date</th>
          <th class="px-4 py-2 font-normal">ID</th>
          <th class="px-4 py-2 font-normal">Account</th>
          <th class="px-4 py-2 font-normal">First Code</th>
          <th class="px-4 py-2 font-normal">Second Code</th>
          <th class="px-4 py-2 font-normal">Fill Time</th>
          <th class="px-4 py-2 font-normal">Status</th>
          <th class="px-4 py-2 font-normal">Action</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        <!-- Data will be inserted here dynamically -->
      </tbody>
    </table>

    <!-- Pagination Controls -->
    <div class="mt-4 flex justify-between items-center">
      <div class="flex space-x-2">
        <button
          id="prevPageBtn"
          class="px-4 py-2 bg-blue-500 text-white rounded-lg hidden"
        >
          Previous
        </button>

        <div id="pageNumbers" class="flex space-x-2">
          <!-- Page numbers will be dynamically generated here -->
        </div>

        <button
          id="nextPageBtn"
          class="px-4 py-2 bg-blue-500 text-white rounded-lg hidden"
        >
          Next
        </button>
      </div>

      <span id="paginationInfo" class="text-gray-700 text-sm"></span>
    </div>
    <audio
      id="notificationSound"
      src="/sounds/notification.mp3"
      preload="auto"
    ></audio>
  </div>

  <dialog class="modal modal--tip" id="modal--tip">
    <div class="modal__content">
      <div class="modal__announce">
        <div class="m-3">
          <h2 class="text-lg text-center">คุณแน่ใจหรือไหม</h2>
        </div>
        <div class="flex justify-evenly">
          <div>
            <button class="w-24 text-white font-light bg-red-500 p-1 rounded-lg active:bg-red-400" id="cancel">ยกเลิก</button>
          </div>
          <div>
            <button class="w-24 text-white font-light bg-green-500 p-1 rounded-lg active:bg-green-400" id="confirm">ยืนยัน</button>
          </div>
        </div>
      </div>
    </div>
  </dialog>
</div>
